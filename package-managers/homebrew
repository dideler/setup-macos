#!/usr/bin/env bash

if ! [[ $(command -v brew) ]]; then
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

brew analytics off
brew update
brew install caskroom/cask/brew-cask

taps=(
  'git-duet/tap'
  'homebrew/bundle'
  'homebrew/dupes'
  'homebrew/services'
)

formulas=(
  'autoconf'
  'automake'
  'bash'
  'cloc'
  'cmake'
  'colordiff'
  'coreutils'
  'diff-so-fancy'
  'ffmpeg --with-faac'
  'findutils --with-default-names'
  'fish'
  'gawk'
  'git-duet'
  'git-lfs'
  'git'
  'gnu-getopt'
  'gnu-indent --with-default-names'
  'gnu-sed --with-default-names'
  'gnu-tar --with-default-names'
  'gnu-time --with-default-names'
  'gnu-units --with-default-names'
  'gnu-which --with-default-names'
  'gnutls'
  'go'
  'heroku'
  'htop-osx'
  'httpie'
  'hub'
  'imagemagick'
  'jp2a'
  'md5sha1sum'
  'node'
  'openssl'
  'postgresql'
  'python3'
  'rbenv'
  'rbenv-default-gems'
  'rbenv-gem-rehash'
  'redis'
  'ripgrep'
  'ruby-build'
  'the_silver_searcher'
  'trash'
  'tree'
  'vim --override-system-vi --with-python3'
  'watch'
  'wget'
  'youtube-dl'
  # 'git-number' # TODO: Enable once aliases are set up.
)

dupes=(
  'grep --with-default-names'
  'less'
  'make --with-default-names'
  'openssh'
  'rsync'
  'screen'
  'unzip'
  'gzip'
)

casks=(
  '1password'
  'alfred'
  'atom'
  'bonjour-browser'
  'caffeine'
  'dash'
  'discord'
  'docker'
  'firefox'
  'flux'
  'flycut'
  'github-desktop'
  'google-chrome'
  'google-chrome-canary'
  'hipchat'
  'iterm2'
  'java'
  'little-snitch'
  'mactex'
  'pgadmin4'
  'psequel'
  'rdm'
  'rowanj-gitx'
  'screenhero'
  # 'shiftit'
  'slack'
  'spectacle' # Similar to shifit
  'vlc'
  # 'mongohub'
  'skype'
  # 'dropbox' # Has issues with 2FA. Go to https://www.dropbox.com/install.
)

for tap in "${taps[@]}"; do
  brew tap "$tap"
done

for formula in "${formulas[@]}"; do
  eval "brew install ${formula}"
done

for dupe in "${dupes[@]}"; do
  eval "brew install ${dupe}"
done

for cask in "${casks[@]}"; do
  brew cask install "$cask"
done
