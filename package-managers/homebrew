#!/usr/bin/env bash -e

source utils.sh

if ! [[ $(command -v brew) ]]; then
  bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
fi

sudo_once

brew analytics off
brew update

taps=(
  'homebrew/bundle'
  'homebrew/services'
  'heroku/brew'
)

formulas=(
  'airshare'
  'argon2'
  'autoconf'
  'automake'
  'awscli'
  'bandwhich'
  'bash'
  'bat'
  'brotli'
  'cloc'
  'cmake'
  'colordiff'
  'coreutils'
  'ctags'
  'curl-openssl'
  'curl'
  'diff-pdf'
  'diff-so-fancy'
  'direnv'
  'dos2unix'
  'eva'
  'exa'
  'fd'
  'ffmpeg'
  'findomain'
  'findutils'
  'fish'
  'fzf'
  'gawk'
  'gettext'
  'gh'
  'git-filter-repo'
  'git-lfs'
  'git'
  'gitleaks'
  'gitui'
  'glow'
  'gnu-getopt'
  'gnu-indent'
  'gnu-sed'
  'gnu-tar'
  'gnu-time'
  'gnu-units'
  'gnu-which'
  'gnutls'
  'go'
  'gobject-introspection'
  'grep'
  'gzip'
  'heroku'
  'highlight'
  'htop-osx'
  'httpie'
  'hub'
  'imagemagick'
  'insect'
  'jp2a'
  'jpeg'
  'jq'
  'less'
  'lzop'
  'make'
  'md5sha1sum'
  'monolith'
  'moreutils'
  'mosh'
  'ncdu'
  'neovim'
  'openssl'
  'pgcli'
  'pngquant'
  'poppler'
  'postgresql'
  'python3'
  'readline'
  'redis'
  'rename'
  'ripgrep-all'
  'ripgrep'
  'rsync'
  'screen'
  'shellcheck'
  'the_silver_searcher'
  'tldr'
  'trash'
  'tree'
  'unzip'
  'vim'
  'watch'
  'wget'
  'youtube-dl'
  # 'git-number' # TODO: Enable once aliases are set up.
  # 'openssh' # Disabled because it lacks keychain support.
)

casks=(
  '1password'
  'alfred'
  'atom'
  'balenaetcher'
  'brave-browser'
  'caffeine'
  'copyq'
  'dash'
  'devdocs'
  'docker'
  'firefox'
  'flux'
  'flycut'
  'github'
  'google-backup-and-sync'
  'google-chrome'
  'google-earth-pro'
  'imageoptim'
  'insomnia'
  'iterm2'
  'java'
  'kap'
  'lepton'
  'mactex'
  'ngrok'
  'pgadmin4'
  'postico'
  'postman'
  'psequel'
  'avibrazil-rdm'
  'rowanj-gitx'
  'skype'
  'slack'
  'spectacle'
  'spotify'
  'visual-studio-code'
  'vlc'
  'whatsapp'
  'xquartz'
  # 'mongohub'
  # 'little-snitch'
  # 'dropbox' # Has issues with 2FA. Go to https://www.dropbox.com/install.
)

for tap in "${taps[@]}"; do
  brew tap "$tap"
done

for cask in "${casks[@]}"; do
  brew cask install "$cask" || true
done

for formula in "${formulas[@]}"; do
  brew install "$formula"
done

# Use GNU commands without "g" prefix.

grep -q "gnubin" ~/.bash_profile || \
  echo 'export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"' >> ~/.bash_profile

grep -q "gnubin" ~/.zshrc || \
  echo 'export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"' >> ~/.zshrc

if is_available fish; then
  add_to_user_path "/usr/local/opt/coreutils/libexec/gnubin"
fi
